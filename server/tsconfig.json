{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // Ensure this is pointing to your custom types
    ]
  },
    "include": [
      "src/**/*", // Ensure this includes your custom types
      "src/types/**/*.d.ts" // Ensure your custom type definitions are included
    ],
  "exclude": [
    "node_modules",
    "dist" // Exclude the output directory
  ]
}